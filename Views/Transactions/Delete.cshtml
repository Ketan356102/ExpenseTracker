@model ExpenseTracker.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2>Delete Transaction</h2>

<h4>Are you sure you want to delete this transaction?</h4>
<hr />

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">â‚¹@Model.Amount</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-3">Note</dt>
        <dd class="col-sm-9">@Model.Note</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
